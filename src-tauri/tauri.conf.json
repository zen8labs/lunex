{
  "$schema": "https://schema.tauri.app/config/2",
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/nexo-agent/nexo/releases/latest/download/latest.json"
      ],
      "pubkey": "RWS/hMThiUCDH4XEHW9nRsefH5vT5B3dmlcMbBveSikP0O/lCEyuIJJi"
    }
  },
  "productName": "Nexo",
  "version": "0.1.0-alpha.19",
  "identifier": "com.nexo.app",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Nexo",
        "width": 1366,
        "height": 768,
        "decorations": false,
        "maximized": true
      }
    ],
    "security": {
      "csp": "default-src 'self' 'unsafe-inline' 'unsafe-eval' ipc: http://ipc.localhost asset: http://asset.localhost https://asset.localhost data: blob: *"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": ["binaries/*"],
    "windows": {
      "wix": {
        "version": "0.1.17"
      }
    }
  }
}
