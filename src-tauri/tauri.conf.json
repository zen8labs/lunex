{
  "$schema": "https://schema.tauri.app/config/2",
  "plugins": {
    "updater": {
      "endpoints": [
        "https://raw.githubusercontent.com/zen8labs/lunex-releases/refs/heads/main/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDU2QzYwODI1REZGNzY0MDkKUldRSlpQZmZKUWpHVnFwRmxvZFo5ZGRtL3BBRGNJb0Q5b2NxeThkVHdTRUI1a2dsOERORUUwVGYK"
    }
  },
  "productName": "Lunex",
  "version": "0.1.0-alpha.2",
  "identifier": "com.lunex.app",
  "build": {
    "beforeDevCommand": "yarn ui:dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "yarn ui:build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Lunex",
        "width": 1366,
        "height": 768,
        "center": true,
        "decorations": false,
        "maximized": true
      }
    ],
    "security": {
      "csp": "default-src 'self' 'unsafe-inline' 'unsafe-eval' ipc: http://ipc.localhost asset: http://asset.localhost https://asset.localhost data: blob: *"
    }
  },
  "bundle": {
    "createUpdaterArtifacts": true,
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": ["binaries/*"],
    "windows": {
      "wix": {
        "version": "0.1.2"
      }
    }
  }
}
